{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "types": ["node"],            // ⬅️ retirer "dom" d'ici
    "skipLibCheck": true          // (optionnel) pour éviter des frictions de d.ts
  },
  "include": ["server.ts", "index.tsx"]
}
